# OriginA Server Configuration

# Server port (default: 3001)
PORT=3001

# API authentication key (leave empty for development mode - no auth required)
ORIGINA_API_KEY=

# JWT secret for user authentication (required for email+password auth)
JWT_SECRET=

# CORS allowed origins (comma-separated, default: http://localhost:5173)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# LLM Provider API Keys (set at least one)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=
DEEPSEEK_API_KEY=
MISTRAL_API_KEY=
GROQ_API_KEY=
OPENROUTER_API_KEY=
XAI_API_KEY=
MINIMAX_API_KEY=

# PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=origina
PG_USER=origina
PG_PASSWORD=

# Redis (individual fields)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=oa:
REDIS_TLS=false

# Redis (connection URL — overrides individual fields if set)
# REDIS_URL=rediss://username:password@host:port

# Voice — Speech-to-Text (Deepgram)
DEEPGRAM_API_KEY=

# Voice — Text-to-Speech (ElevenLabs)
ELEVENLABS_API_KEY=

# Search — Web search for AI agents
SEARCH_API_KEY=

# Channel Connectors
TELEGRAM_BOT_TOKEN=

# Logging
LOG_LEVEL=info
